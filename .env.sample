# Secret key for Flask sessions (generate a random value for production)
SECRET_KEY=your_random_secret_key

# Storage configuration
USE_S3=False  # Set to True to use S3 instead of local storage
S3_BUCKET_NAME=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Flask configuration
# PORT is set by Heroku automatically, but you can specify for local development
PORT=5000
